<yas>
    <scene root="scene" axis_length="5" />
    <views default="global">
        <perspective id="global" near="0.1" far="500" angle="45">
            <from x="100" y="150" z="150" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>
    <ambient>
        <ambient r="0" g="0" b="0" a="1" />
        <background r="0.05" g="0.05" b="0.1" a="1" />
    </ambient>
    <lights>
        <omni id="light1" enabled="1">
            <location x="0" y="30" z="-90" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.3" g="0.3" b="0.3" a="1"/>
            <specular r="0.3" g="0.3" b="0.3" a="1"/>
        </omni>
    </lights>
    <textures>
        <texture id="tableWood" file="scenes/images/wood.jpg" />
    </textures>
    <materials>
        <material id="white" shininess="0.5">
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </material>
        
    </materials>
    <transformations>
        <transformation id="base">
            <translate x="0" y="0" z="0" />
        </transformation>
    </transformations>
    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0.5" z1="0" x2="-2" y2="-0.5" z2="0" x3="2" y3="-0.5" z3="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" slices="50" stacks="10" />
        </primitive>
        <primitive id="cone">
            <cylinder base="1" top="0" height="1" slices="50" stacks="50" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="5" slices="100" stacks="100" />
        </primitive>
        <primitive id="side_wall">
            <rectangle x1="-90" y1="-15" x2="90" y2="15" />
        </primitive>
        <primitive id="small_wall">
            <rectangle x1="-20" y1="-15" x2="20" y2="15" />
        </primitive>
        <primitive id="floor">
            <rectangle x1="-90" y1="-20" x2="90" y2="20" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="2" slices="10" loops="50">
            </torus>
        </primitive>
    </primitives>
    <components>
        <component id="scene">
            <transformation>
                <transformationref id="base" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="room" />
            </children>
        </component>

        <component id="room">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id = "cylinder"/>
            </children>
        </component>
    </components>
</yas>
