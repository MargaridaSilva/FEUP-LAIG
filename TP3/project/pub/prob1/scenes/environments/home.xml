<yas>
	<!-- _________________ SCENE ___________________ -->

	<scene root="scene" axis_length="30" />

	<!-- _________________ VIEWS ___________________ -->

	<views default="global">
		<perspective id="current" near="0.1" far="500" angle="35">
			<from x="15" y="15" z="0" />
			<to x="0" y="0" z="0" />
		</perspective>
		<perspective id="global" near="0.1" far="500" angle="35">
			<from x="15" y="15" z="0" />
			<to x="0" y="0" z="0" />
		</perspective>
		<perspective id="global2" near="0.1" far="500" angle="35">
			<from x="100" y="15" z="0" />
			<to x="0" y="0" z="0" />
		</perspective>
		<perspective id="top" near="0.1" far="500" angle="35">
			<from x="0" y="20" z="0.1" />
			<to x="0" y="0" z="0" />
		</perspective>
		<perspective id="Player1" near="0.1" far="500" angle="35">
			<from x="5" y="15" z="15" />
			<to x="0" y="0" z="0" />
		</perspective>
		<perspective id="Player2" near="0.1" far="500" angle="35">
			<from x="5" y="15" z="-15" />
			<to x="0" y="0" z="0" />
		</perspective>
	</views>

	<!-- ________________ AMBIENT __________________ -->

	<ambient>
		<ambient r="0.2" g="0.2" b="0.2" a="1" />
		<background r="0.05" g="0.05" b="0.1" a="1" />
	</ambient>

	<!-- _________________ LIGHTS ___________________ -->

	<lights>
		<omni id="light1" enabled="1">
			<location x="0" y="20" z="0" w="1" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1" />
			<specular r="1.0" g="1.0" b="1.0" a="1" />
		</omni>
		<spot id="test" enabled="0" angle="45" exponent="2">
			<location x="0" y="0" z="0" w="1" />
			<target x="0" y="0" z="0" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="1" g="1" b="1" a="1" />
		</spot>
	</lights>

	<!-- ________________ TEXTURES ___________________ -->

	<textures>
		<texture id="warning" file="scenes/images/warning.jpg" />
		<texture id="wood" file="scenes/images/environments/wood.jpg" />
		<texture id="floor" file="scenes/images/environments/homeFloor.jpg" />
		<texture id="wall" file="scenes/images/environments/homeWall.jpg" />
		<texture id="fur" file="scenes/images/environments/fur.jpg" />
	</textures>

	<!-- ________________ MATERIALS __________________ -->

	<materials>

		<material id="white" shininess="120">
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1" />
			<specular r="1.0" g="1.0" b="1.0" a="1" />
		</material>

		<material id="black" shininess="120">
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="0.0" g="0.0" b="0.0" a="1" />
			<specular r="1.0" g="1.0" b="1.0" a="1" />
		</material>


		<material id="red" shininess="120">
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="1.0" g="0.14" b="0" a="1" />
			<specular r="1.0" g="0.14" b="0" a="1" />
		</material>

		<material id="blue" shininess="120">
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="0" g="0.5" b="1.0" a="1" />
			<specular r="0" g="0.5" b="1.0" a="1" />
		</material>

		<material id="softBlue" shininess="5">
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="0.71" g="0.81" b="0.81" a="1" />
			<specular r="0.1" g="0.1" b="0.5" a="1" />
		</material>
	</materials>

	<!-- ______________ TRANSFORMATIONS _______________ -->

	<transformations>
		<transformation id="base">
			<translate x="0" y="0" z="0" />
		</transformation>
	</transformations>

	<!-- ________________ ANIMATIONS __________________ -->
	<animations>
	</animations>

	<!-- ________________ PRIMITIVES __________________ -->

	<primitives>
		<primitive id="plane">
			<plane npartsU = "10" npartsV = "10" />
		</primitive>

		<primitive id="quad">
			<rectangle x1="0" y1="0" x2="1" y2="1" />
		</primitive>

		<primitive id="torus">
			<torus inner="5" outer="4" slices="20" loops="50">
			</torus>
		</primitive>
	</primitives>

	<!-- ________________ COMPONENTS __________________ -->

	<!-- _________ ROOT _________ -->

	<components>
		<component id="scene">
			<transformation>
				<transformationref id="base" />
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="none" />
			<children>
				<componentref id="table"/>
				<componentref id="walls"/>
				<componentref id="floor"/>
				<componentref id="chairs"/>
			</children>
		</component>

		<!-- WALLS -->

		<component id="walls">
			<transformation>
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="wall" />
			<children>
				<componentref id="wall1"/>
				<componentref id="wall2"/>
				<componentref id="wall3"/>
			</children>
		</component>

		<component id="wall1">
			<transformation>
				<translate x="-15" y="0" z="0"/>
				<rotate axis="z" angle="-90" />
				<scale x="40" y="1" z="60"/>
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="inherit" />
			<children>
				<primitiveref id="plane"/>
			</children>
		</component>

		<component id="floor">
			<transformation>
				<translate x="-15" y="-20" z="30"/>
				<scale x="30" y="1" z="60"/>
				<rotate axis="x" angle="-90" />
				
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="floor" length_s = "0.1" length_t="0.2"/>
			<children>
				<primitiveref id="quad"/>
			</children>
		</component>

		<component id="wall2">
			<transformation>
				<translate x="0" y="0" z="30"/>
				<rotate axis="x" angle="-90" />
				<scale x="30" y="1" z="40"/>
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="inherit" />
			<children>
				<primitiveref id="plane"/>
			</children>
		</component>

		<component id="wall3">
			<transformation>
				<translate x="0" y="0" z="-30"/>
				<rotate axis="x" angle="90" />
				<scale x="30" y="1" z="40"/>
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="inherit" />
			<children>
				<primitiveref id="plane"/>
			</children>
		</component>

		<!-- Table -->

		<component id="table">
			<transformation>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="wood"/>
			<children>
				<componentref id="tableTop" />
				<componentref id="tableLegs" />
			</children>
		</component>

		<component id="tableTop">
			<transformation>
				<translate x="0" y="-1" z="0"/>
				<scale x="20" y="1" z ="20"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="cube"/>
			</children>
		</component>

		<component id="tableLegs">
			<transformation>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="tableLeg1"/>
				<componentref id="tableLeg2"/>
				<componentref id="tableLeg3"/>
				<componentref id="tableLeg4"/>
			</children>
		</component>

		<component id="tableLeg1">
			<transformation>
				<translate x="9" y="-10" z="9"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="tableLeg"/>
			</children>
		</component>

		<component id="tableLeg2">
			<transformation>
				<translate x="9" y="-10" z="-9"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="tableLeg"/>
			</children>
		</component>
		<component id="tableLeg3">
			<transformation>
				<translate x="-9" y="-10" z="9"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="tableLeg"/>
			</children>
		</component>
		<component id="tableLeg4">
			<transformation>
				<translate x="-9" y="-10" z="-9"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="tableLeg"/>
			</children>
		</component>

		<component id="tableLeg">
			<transformation>
				<scale x="2" y="19" z="2"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="cube"/>
			</children>
		</component>

		<!-- Chairs -->

		<component id="chairs">
			<transformation>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="fur"/>
			<children>
				<componentref id="leftChair" />
				<componentref id="rightChair" />
			</children>
		</component>

		<component id="leftChair">
			<transformation>
				<translate x="0" y="0" z="15"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="chair"/>
			</children>
		</component>

		<component id="rightChair">
			<transformation>
				<translate x="0" y="0" z="-15"/>
				
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit"/>
			<children>
				<componentref id="chair"/>
			</children>
		</component>

		<component id="chair">
			<transformation>
				<translate x="0" y="-13" z="0"/>
				<scale x="1.3" y="1.3" z="1.3" />
				<rotate axis="x" angle="-90" />
			</transformation>
			<materials>
				<material id="softBlue" />
			</materials>
			<texture id="none"/>
			<children>
				<primitiveref id="torus" />
			</children>
		</component>

		<!-- Cube -->

		<component id="cube">
			<transformation>
				<rotate axis="y" angle="-90" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="faceCube1" />
				<componentref id="faceCube2" />
				<componentref id="faceCube3" />
				<componentref id="faceCube4" />
				<componentref id="faceCube5" />
				<componentref id="faceCube6" />
			</children>
		</component>

		<component id="faceCube1">
			<transformation>
				<translate x="0" y="0" z="0.5" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="rec" />
			</children>
		</component>

		<component id="faceCube2">
			<transformation>
				<translate x="0" y="0" z="-0.5" />
				<rotate axis="y" angle="-180" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="rec" />
			</children>
		</component>
		<component id="faceCube3">
			<transformation>
				<translate x="0.5" y="0" z="0" />
				<rotate axis="y" angle="90" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="rec" />
			</children>
		</component>
		<component id="faceCube4">
			<transformation>
				<translate x="-0.5" y="0" z="0" />
				<rotate axis="y" angle="-90" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="rec" />
			</children>
		</component>
		<component id="faceCube5">
			<transformation>
				<translate x="0" y="-0.5" z="0" />
				<rotate axis="x" angle="90" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="rec" />
			</children>
		</component>
		<component id="faceCube6">
			<transformation>
				<translate x="0" y="0.5" z="0" />
				<rotate axis="x" angle="-90" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1.0" length_t="1.0" />
			<children>
				<componentref id="rec" />
			</children>
		</component>

		
		<component id="rec">
			<transformation>
				<rotate axis="y" angle="-90" />
				<rotate axis="z" angle="-90" />
			</transformation>
			<animations>
			</animations>
			<materials>
				<material id="white" />
				<material id="black" />
			</materials>
			<texture id="inherit" />
			<children>
				<primitiveref id="plane"/>
			</children>
		</component>
	</components>
</yas>