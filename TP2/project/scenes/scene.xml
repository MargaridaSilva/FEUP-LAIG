<yas>
	<scene root="scene" axis_length="30" />
	<views default="global">
		<perspective id="global" near="0.1" far="500" angle="35">
			<from x="50" y="50" z="50" />
			<to x="0" y="0" z="0" />
		</perspective>
		<perspective id="close" near="0.1" far="500" angle="35">
			<from x="5" y="5" z="5" />
			<to x="0" y="0" z="0" />
		</perspective>
	</views>
	<ambient>
		<ambient r="0.2" g="0.2" b="0.2" a="1" />
		<background r="0.05" g="0.05" b="0.1" a="1" />
	</ambient>
	<lights>
		<omni id="light1" enabled="1">
			<location x="100" y="100" z="100" w="1" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1" />
			<specular r="1.0" g="1.0" b="1.0" a="1" />
		</omni>
		<omni id="light2" enabled="1">
			<location x="-100" y="-100" z="-100" w="1" />
			<ambient r="0.1" g="0.1" b="0.1" a="1" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1" />
			<specular r="1.0" g="1.0" b="1.0" a="1" />
		</omni>
	</lights>
	<textures>
		<texture id="terrain_h" file="scenes/images/island-height.jpg" />
		<texture id="terrain_t" file="scenes/images/island.jpg" />
		<texture id="water_h" file="scenes/images/water-height.jpg" />
		<texture id="water_t" file="scenes/images/texture.jpg" />

	</textures>
	<materials>
		<material id="white" shininess="0.5">
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0.1" g="0.1" b="0.1" a="1" />
		</material>
	</materials>
	<transformations>
		<transformation id="base">
			<translate x="0" y="0" z="0" />
		</transformation>
	</transformations>
	<animations>
		<linear id="exampleLinear" span="1" >
			<controlpoint xx="0" yy="0" zz="0"/>
			<controlpoint xx="1" yy="1" zz="1"/>
		</linear>
		<circular id="exampleCircular" span="0" center="0 0 0" radius="1" startang="1" rotang="1"/>
	</animations>
	<primitives>
		<primitive id="rectangle">
			<rectangle x1="0" y1="0" x2 ="1" y2="1" />
		</primitive>
		<primitive id="vehicle">
			<vehicle />
		</primitive>
		<primitive id="terrain">
			<terrain idtexture="terrain_t" idheightmap="terrain_h" parts="100" heightscale="0.2"/>
		</primitive>

		<primitive id="water">
			<water idtexture="water_t" idwavemap="water_h" parts="100" heightscale="0.015" texscale="5" />
		</primitive>

		<primitive id="cylinder2">
			<cylinder2 base = "2.0" top = "0.1" height = "2.0" slices = "20" stacks = "5"/>
		</primitive>

		<primitive id="cylinder">
			<cylinder base = "2.0" top = "0.1" height = "2.0" slices = "20" stacks = "5"/>
		</primitive>
	</primitives>
	<components>
		<component id="scene">
			<transformation>
				<transformationref id="base" />
			</transformation>
			<materials>
				<material id="white" />
			</materials>
			<texture id="none" />
			<children>
				<componentref id="cylinder"/>
			</children>
		</component>


		<component id="cylinder">
			<transformation>
				<transformationref id="base"/>
			</transformation>
			<animations>
				<animationref id= "exampleLinear"/>
			</animations>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="terrain" />
			</children>
		</component>

		<component id="water">
			<transformation>
				<scale x="50" y="50" z="50" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="water" />
			</children>
		</component>

		<component id="vehicle">
			<transformation>
				<translate x="0" y="10" z="0" />
				<scale x="0.1" y="0.1" z="0.1" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="vehicle" />
			</children>
		</component>

	</components>
</yas>